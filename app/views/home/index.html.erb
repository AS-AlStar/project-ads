<div class="container p-5">
  <div class="row align-items-center flex-column">
      <% @ads.each do |ad| %>
      <div class="p-1">
        <a href='/ads/<%=ad.id %>' class="list-group-item list-group-item-action flex-column align-items-center">
          <div class="card-body">
            <% if ad.image? %>
              <div class="card-img-left float-left p-2">
                <img src=<%= ad.image.thumb.url %> class="d-block w-100" alt="image">
              </div>
            <% end %>
            <h5 class="card-title"><%= ad.title %></h5>
            <p class="card-text"><%= ad.body %></p>
          </div>
        </a>
      </div>
      <% end %>
  </div>
</div>