<div class="container">
  <div class="d-flex p-5 flex-column">
    <div class="align-self-center">
      <h2>Create adverting</h2>
    </div>
    <div class="col-md-auto">
      <%= form_for @ad, html: { id: 'newAdForm' } do |f| %>

        <div class="form-group">
          <%= f.label :title %><br/>
          <%= f.text_field :title, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :body %><br/>
          <%= f.text_area :body, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :image %><br/>
          <%= f.file_field :image %>
        </div>
        <%= f.hidden_field :state %>

        <div class="actions">
          <%= f.submit "Save as draft", class: 'btn btn-primary', id: 'saveDraftAdButton' %>
          <%= f.submit "Create", class: 'btn btn-warning', id: 'saveNewAdButton' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
